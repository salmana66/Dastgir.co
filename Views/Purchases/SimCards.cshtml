<script>
    //saving the data
    $(document).ready(function () {
        debugger;
        $('.AddNew').show();
        $('.Save').show();
        disabledAll();
    });
    $('.AddNew').on('click', function () {
        $('.Save').show();
        enabledAll();
        $('#form1').slideDown();
        $('.form2').slideUp();
    });
        $('.Save').on('click', function () {
            var _Id = "#SimpleData";
            var validationFrm = "SimpleData";
            var Url = '@Url.Action("AddSimCards", "Purchases")';
            SaveDataSingleObj(_Id, validationFrm, Url);

        });

    $('.Delete').on('click', function () {
        debugger;
        var id = $('.id').val().trim();
        var Url = '@Url.Action("DeleteUser", "User")';
        DeleteRecord(id, Url);
    });
    $('.Search').on('click', function () {
        $('#form1').slideUp();
        enabledAll();
        $('.form2').slideDown();
        $('.Save').hide();
    });

    $('.SearchLoad').live('click', function () {
        debugger;
        var date = $('#PDate').val();
        var stype = $('#SimType1 :selected').val();
        var url = '@Url.Action("GetSimCards", "Purchases")';
        var Data = JSON.stringify({ date: date, stype: stype });
        var GetData = showGridData(Data, url);
        $('.AddGrid').html('');
        for (var i = 0; i <= GetData.length; i++)
        {

            var currentTime = new Date(parseInt(GetData[i].Date.substr(6)));
            var month = currentTime.getMonth() + 1;
            var day = currentTime.getDate();
            var year = currentTime.getFullYear();
            var date = day + "/" + month + "/" + year;
            debugger;
            var row = "<tr>"
                                    +'<td style="background:#d5d6d9; text-align:center;"></td>'
                                    + '<td><input class="form-control tdtext-fld-height" value="' + date + '" type="text"><input type="hidden" class="id" value="' + GetData[i].Id + '" /></td>'
                                    +'<td><input class="form-control tdtext-fld-height"  value="'+"Rs "+GetData[i].SimType+'" type="text"></td>'
                                    +'<td><input class="form-control tdtext-fld-height"  value="'+GetData[i].Qty+'" type="text"></td>'
                                    + '<td><input class="form-control tdtext-fld-height"  value="' + GetData[i].PurchasePrice + '" type="text"></td>'
                                     + '<td><input class="form-control tdtext-fld-height"  value="' + GetData[i].SalePrice + '" type="text"></td>'
                                      + '<td><input class="form-control tdtext-fld-height"  value="' + GetData[i].Description + '" type="text"></td>'
                                        +'<td class="action" style="text-align:center;"><a href="#" class="Delete"><i class="fa fa-times" aria-hidden="true"></i></a></td>'


            "</tr>";
            $('.AddGrid').append(row);
        }
        @*@{if(Session["userrole"] != null)
          {
              if(Session["userrole"].ToString() == "Admin")
              {
                  <text> $('.action').hide();</text>
              }
          }

              }*@
    });
    SetActive("purchases", "simp", "simp");
</script>


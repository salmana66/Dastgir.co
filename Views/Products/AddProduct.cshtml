@model List<Mob7183.Models.Product>
@{
    ViewBag.Title = "Products";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="content-header">
    @{

        Html.RenderPartial("_AlertBox");
    }
    <div class="panel panel-default custom-height">
        <div class="panel-heading">
            <div class="pull-left">
                <h3 class="panel-title">Our Products</h3>
            </div>
            <div class="pull-right">
                <button type="button" class="btn2 btn-primary"> <i class="fa fa-minus"></i> </button>
                <button type="button" class="btn2 btn-primary"> <i class="fa fa-window-maximize"></i> </button>
                <button type="button" class="btn2 btn-primary"> <i class="fa fa-close"></i> </button>
            </div>
        </div>
        <div class="panel-body">
            <div class="row">
                <div class="col-md-5">
                    <section class="panel panel-default no-background-bg">
                        <div class="panel-body ">
                            <div class="simpledata" id="SimpleData">
                                <form class="form-horizontal ng-pristine ng-valid" action="" id="form1" role="form">
                                    <div class="form-group form-group-margin">
                                        <label for="inputEmail3" class="col-sm-3 no-gutters control-label">Product Name</label>
                                        <div class="col-sm-6 no-gutters">
                                            <input class="form-control text-fld-height required" required id="" name="ItemName" type="text">
                                        </div>
                                    </div>
                                   
                                    <div class="form-group form-group-margin">
                                        <label for="inputEmail3" class="col-sm-3 no-gutters control-label">Purchase Price</label>
                                        <div class="col-sm-6 no-gutters">
                                            <input class="form-control text-fld-height required" id="profit" placeholder="Purchase Price.." name="PurchasePrice" type="text">
                                        </div>
                                    </div>
                                    <!--End Form Group-->
                                    <div class="form-group form-group-margin">
                                        <label for="inputEmail3" class="col-sm-3 no-gutters control-label">Sale Price</label>
                                        <div class="col-sm-6 no-gutters">
                                            <input class="form-control text-fld-height required" id="payment" placeholder="Sale Price.." name="SalePrice" type="text">
                                        </div>
                                    </div>
                                    <!--End Form Group-->


                                    <div class="form-group form-group-margin">
                                        <label for="inputEmail3" class="col-sm-3 no-gutters control-label">Description</label>
                                        <div class="col-sm-6 no-gutters">
                                            <input class="form-control text-fld-height " type="text" id="" placeholder="Description.." name="Description" />
                                        </div>
                                    </div>
                                    <!--End Form Group-->
                                    <!--End Form Group-->
                                </form>
                            </div>
                            
                        </div>
                    </section>
                </div>

            </div>
            <div class="row" >
                <div class="col-md-12">
                    <div class="">
                        <table class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th style=" text-align:center;"><i class="fa fa-plus" aria-hidden="true"></i></th>
                                    <th>Product Name</th>
                                    <th>Purchase Price</th>
                                    <th>Sale Price</th>
                                    <th>Description</th>
                                    <th class="action">Action</th>
                                </tr>
                            </thead>
                            <tbody class="AddGrid">
                                @if (Model != null)
                                {
                                     foreach(var i in Model)
                                {
                                    <tr >
                                    <td style="background:#d5d6d9; text-align:center;">3</td>
                                        <td><input class="form-control onId tdtext-fld-height" value="@i.ItemName" type="text"><input type="hidden" class="id" value="@i.Id" /></td>
                                        <td><input class="form-control onId tdtext-fld-height" value="@i.PurchasePrice" type="text"></td>
                                        <td><input class="form-control onId tdtext-fld-height" value="@i.SalePrice" type="text"></td>
                                        <td><input class="form-control onId tdtext-fld-height" value="@i.Description" type="text"></td>
                                    <td style="text-align:center;" class="not"><a href="#" class="delprod" id=""><i class="fa fa-times" aria-hidden="true"></i></a></td>
                                </tr> 
                                } 
                                }
                              
                               
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

        </div>
    </div>
</section>
<!-- Main content -->
<section class="content">
    <!-- Your Page Content Here -->
</section>
<!-- /.content -->
<script>
    //saving the data
    $(document).ready(function () {
        debugger;
        $('.AddNew').show();
        $('.Save').show();
        disabledAll();
    });
    $('.AddNew').on('click', function () {
        $('.Save').show();
        enabledAll();
        $('#form1').slideDown();
        $('.form2').slideUp();
    });
        $('.Save').on('click', function () {
            var _Id = "#SimpleData";
            var validationFrm = "SimpleData";
            var Url = '@Url.Action("AddProducts", "Products")';
            SaveDataSingleObj(_Id, validationFrm, Url);

        });

    $('.delprod').on('click', function () {
        debugger;
        var id = $(this).parents('tr').find('.id').val();
     
        var Url = '@Url.Action("DeleteProduct", "Products")';
        DeleteRecord(id, Url);
    });
 
  
  
</script>


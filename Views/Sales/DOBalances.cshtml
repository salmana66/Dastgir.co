@model List<Mob7183.Models.DistributorBalance>
@{
    ViewBag.Title = "DOBalances";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="content-header">
    @{

        Html.RenderPartial("_AlertBox");
    }
    <div class="panel panel-default custom-height">
        <div class="panel-heading">
            <div class="pull-left">
                <h3 class="panel-title"> Distributors Balances</h3>
            </div>
            <div class="pull-right">
                <button type="button" class="btn2 btn-primary"> <i class="fa fa-minus"></i> </button>
                <button type="button" class="btn2 btn-primary"> <i class="fa fa-window-maximize"></i> </button>
                <button type="button" class="btn2 btn-primary"> <i class="fa fa-close"></i> </button>
            </div>
        </div>
        <div class="panel-body">
            <div class="row">
                <div class="col-md-5">
                    <section class="panel panel-default no-background-bg">
                        <div class="panel-body ">
                            
                            
                        </div>
                    </section>
                </div>

            </div>
            <div class="row form2" >
                <div class="col-md-12">
                    <div class="">
                        <table class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th style=" text-align:center;"><i class="fa fa-plus" aria-hidden="true"></i></th>
                                    <th>Distributor Name</th>
                                    <th>Total Balance</th>
                                    <th>Till Date</th>
                                </tr>
                            </thead>
                            <tbody class="AddGrid">
                                @foreach (var list in Model)
                                {
                                    <tr>
                                        <td style="background:#d5d6d9; text-align:center;"></td>
                                        <td><input class="form-control tdtext-fld-height" value="@list.Distributor.Name" type="text"></td>
                                        <td><input class="form-control tdtext-fld-height" readonly value="@list.PrevBalance" type="text"></td>
                                        <td><input class="form-control tdtext-fld-height" value="@list.Updated_Date.ToString().Split(' ')[0]" type="text"><input type="hidden" class="id" value="@list.Id" /></td>
                                     

                                    </tr>
                                }


                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

        </div>
    </div>
</section>
<!-- Main content -->
<section class="content">
    <!-- Your Page Content Here -->
</section>

@model List<Mob7183.Models.Bank>
@{
    ViewBag.Title = "Your Bank";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="content-header">
    @{

        Html.RenderPartial("_AlertBox");
    }
    <div class="panel panel-default">
        <div class="panel-heading">
            <div class="pull-left">
                <h3 class="panel-title"> Banks</h3>
            </div>
            <div class="pull-right">
                <button type="button" class="btn2 btn-primary"> <i class="fa fa-minus"></i> </button>
                <button type="button" class="btn2 btn-primary"> <i class="fa fa-window-maximize"></i> </button>
                <button type="button" class="btn2 btn-primary"> <i class="fa fa-close"></i> </button>
            </div>
        </div>
        <div class="panel-body">
            <div class="row">
                <div class="col-md-5">
                    <section class="panel panel-default no-background-bg">
                        <div class="panel-body SimpleData" id="SimpleData">
                            <form class="form-horizontal ng-pristine ng-valid" role="form">
                                <div class="form-group form-group-margin">
                                    <label for="inputEmail3" class="col-sm-3 no-gutters control-label">Bank Name</label>
                                    <div class="col-sm-6 no-gutters">
                                        <input class="form-control text-fld-height" required id="" placeholder="Bank Name.." name="BankName" type="text">
                                    </div>
                                </div>
                                <!--End Form Group-->
                                <div class="form-group form-group-margin">
                                    <label for="inputPassword3" class="col-sm-3 no-gutters control-label">Account Number</label>
                                    <div class="col-sm-6 no-gutters">
                                        <input class="form-control text-fld-height" required id="" placeholder="Account Number.." name="AccountNo" type="text">
                                    </div>
                                </div>
                                <!--End Form Group-->
                                <div class="form-group form-group-margin">
                                    <label for="inputEmail3" class="col-sm-3 no-gutters control-label">Account Title</label>
                                    <div class="col-sm-6 no-gutters">
                                        <input class="form-control text-fld-height" id="" placeholder="Account Title.." name="AccountTitle" type="text">
                                    </div>
                                </div>
                                <!--End Form Group-->
                                
                                <!--End Form Group-->
                                <!--End Form Group-->
                            </form>
                        </div>
                    </section>
                </div>

            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="">
                        <table class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th style=" text-align:center;"><i class="fa fa-plus" aria-hidden="true"></i></th>
                                    <th>Bank Name</th>
                                    <th>Account Number</th>
                                    <th>Account Title</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var list in Model)
                                {
                                    <tr>
                                        <td style="background:#d5d6d9; text-align:center;"></td>
                                        <td><input class="form-control tdtext-fld-height" value="@list.BankName" type="text"><input type="hidden" class="id" value="@list.Id" /></td>
                                        <td><input class="form-control tdtext-fld-height" value="@list.AccountNo" type="text"></td>
                                        <td><input class="form-control tdtext-fld-height" readonly value="@list.AccountTitle" type="text"></td>
                                        @if (Session["userrole"].ToString() == "Admin")
                                        {
                                            <td style="text-align:center;"><a href="#" class="Delete"><i class="fa fa-times" aria-hidden="true"></i></a></td>
                                        }

                                    </tr>
                                }

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

        </div>
    </div>
</section>
<!-- Main content -->
<section class="content">
    <!-- Your Page Content Here -->
</section>
<!-- /.content -->
<script>
    //saving the data
    $(document).ready(function () {
        debugger;
        $('.AddNew').show();
        $('.Search').remove();
        disabledAll();
    });
    $('.AddNew').on('click', function () {

        enabledAll();
        $('.Save').show();
        $('.AddNew').hide();
    });
        $('.Save').on('click', function () {
            var _Id = "#SimpleData";
            var validationFrm = "SimpleData";
            var Url = '@Url.Action("AddBank", "User")';
            SaveDataSingleObj(_Id, validationFrm, Url);
            $('.Save').hide();
            $('.AddNew').show();
        });

    $('.Delete').on('click', function () {
        debugger;
        var id = $('.id').val().trim();
        var Url = '@Url.Action("DeleteUser", "User")';
        DeleteRecord(id, Url);
    });
</script>

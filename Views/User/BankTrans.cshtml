@model List<Mob7183.Models.Bank>
@{
    ViewBag.Title = "Bank Transaction";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<section class="content-header">
    @{

        Html.RenderPartial("_AlertBox");
    }
    <div class="panel panel-default custom-height">
        <div class="panel-heading">
            <div class="pull-left">
                <h3 class="panel-title"> Bank Transactions</h3>
            </div>
            <div class="pull-right">
                <button type="button" class="btn2 btn-primary"> <i class="fa fa-minus"></i> </button>
                <button type="button" class="btn2 btn-primary"> <i class="fa fa-window-maximize"></i> </button>
                <button type="button" class="btn2 btn-primary"> <i class="fa fa-close"></i> </button>
            </div>
        </div>
        <div class="panel-body">
            <div class="row">
                <div class="col-md-5">
                    <section class="panel panel-default no-background-bg">
                        <div class="panel-body ">
                            <div class="simpledata" id="SimpleData">
                                <form class="form-horizontal ng-pristine ng-valid" action="" id="form1" role="form">
                                    <div class="form-group form-group-margin">
                                        <label for="inputEmail3" class="col-sm-3 no-gutters control-label">Date</label>
                                        <div class="col-sm-6 no-gutters">
                                            <input class="form-control text-fld-height required" required id="" name="Date" type="date">
                                        </div>
                                    </div>
                                    <div class="form-group form-group-margin">
                                        <label for="inputEmail3" class="col-sm-3 no-gutters control-label">Bank Account</label>
                                        <div class="col-sm-9 no-gutters">
                                            <span class="ui-select">
                                                <select name="BankId" required class="BankId required" id="BankId">
                                                    <option value="">--Select--</option>
                                                    @if (Model != null)
                                                    {
                                                        foreach (var i in Model)
                                                        {
                                                            <option value="@i.Id">@i.BankName</option>
                                                        }
                                                    }
                                                </select>
                                            </span>
                                        </div>
                                    </div>
                                    <!--End Form Group-->
                                    <div class="form-group form-group-margin">
                                        <label for="inputPassword3" class="col-sm-3 no-gutters control-label">Opening Balance</label>
                                        <div class="col-sm-6 no-gutters">
                                            <input class="form-control text-fld-height Numeric required" id="opening" placeholder="Opening Balance.." name="OpeningBalance" type="text">
                                        </div>
                                    </div>
                                    <!--End Form Group-->
                                    <div class="form-group form-group-margin">
                                        <label for="inputPassword3" class="col-sm-3 no-gutters control-label">Deposited Cash</label>
                                        <div class="col-sm-6 no-gutters">
                                            <input class="form-control text-fld-height Numeric " id="Deposit" placeholder="Deposit Balance.." name="Deposit" type="text">
                                        </div>
                                    </div>
                                    <!--End Form Group-->
                                    <div class="form-group form-group-margin">
                                        <label for="inputPassword3" class="col-sm-3 no-gutters control-label">Withdrawn Cash</label>
                                        <div class="col-sm-6 no-gutters">
                                            <input class="form-control text-fld-height Numeric " id="Withdraw" placeholder="Deposit Balance.." name="Withdraw" type="text">
                                        </div>
                                    </div>
                                    <!--End Form Group-->
                                    
                                    <div class="form-group form-group-margin">
                                        <label for="inputEmail3" class="col-sm-3 no-gutters control-label">Total Payment</label>
                                        <div class="col-sm-6 no-gutters">
                                            <input class="form-control text-fld-height Numeric tpayment" id="tpayment" placeholder="Total Payment.." name="TotalPayment" type="text">
                                        </div>
                                    </div>
                                    <!--End Form Group-->
                                    <div class="form-group form-group-margin">
                                        <label for="inputEmail3" class="col-sm-3 no-gutters control-label">Closing Balance</label>
                                        <div class="col-sm-6 no-gutters">
                                            <input class="form-control text-fld-height required Numeric closing" id="closing" placeholder="Closing Balance.." name="ClosingBalance" type="text">
                                        </div>
                                    </div>
                                    <!--End Form Group-->
                                    <!--End Form Group-->
                                    <div class="form-group form-group-margin">
                                        <label for="inputEmail3" class="col-sm-3 no-gutters control-label">Description</label>
                                        <div class="col-sm-6 no-gutters">
                                            <textarea class="form-control text-fld-height"  id=""  placeholder="Description.." name="Description" ></textarea>
                                        </div>
                                    </div>
                                </form>
                            </div>
                            <form class="form-horizontal ng-pristine ng-valid form2" id="form2" role="form" style="display:none;">
                                <div class="form-group form-group-margin">
                                    <label for="inputEmail3" class="col-sm-3 no-gutters control-label">Date</label>
                                    <div class="col-sm-6 no-gutters">
                                        <input class="form-control text-fld-height" type="date" id="PDate" name="Date" />
                                    </div>
                                </div>

                                <div class="form-group form-group-margin">
                                    <label for="inputEmail3" class="col-sm-3 no-gutters control-label">Bank Account</label>
                                    <div class="col-sm-9 no-gutters">
                                        <span class="ui-select">
                                            <select name="BankId1" required class="BankId1 required" id="BankId1">
                                                <option value="">--Select--</option>
                                                @if (Model != null)
                                                {
                                                    foreach (var i in Model)
                                                    {
                                                        <option value="@i.Id">@i.BankName</option>
                                                    }
                                                }
                                            </select>
                                        </span>
                                    </div>
                                </div>
                                <button class="btn btn-success SearchLoad btn-sm pull-left" type="button" style="margin-top: 20px;"><span class="glyphicon glyphicon-search "></span> Filter Result</button>
                            </form>
                        </div>
                    </section>
                </div>

            </div>
            <div class="row form2" style="display:none;">
                <div class="col-md-12">
                    <div class="">
                        <table class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th style=" text-align:center;"><i class="fa fa-plus" aria-hidden="true"></i></th>
                                    <th>Date</th>
                                    <th>Bank Name</th>
                                    <th>Opening Balance</th>
                                    <th>Cash Deposited</th>
                                    <th>Cash Withdtrawn</th>
                                    <th>Total Payment</th>
                                    <th>Closing Balance</th>
                                    <th>Description</th>
                                    <th class="action">Action</th>
                                </tr>
                            </thead>
                            <tbody class="AddGrid"></tbody>
                        </table>
                    </div>
                </div>
            </div>

        </div>
    </div>
</section>
<!-- Main content -->
<section class="content">
    <!-- Your Page Content Here -->
</section>

@model List<Mob7183.Models.Distributor>
@{
    ViewBag.Title = "AddDO";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="content-header">
    @{

        Html.RenderPartial("_AlertBox");
    }
    <div class="panel panel-default">
        <div class="panel-heading">
            <div class="pull-left">
                <h3 class="panel-title"> Distributors <b>(DOs)</b></h3>
            </div>
            <div class="pull-right">
                <button type="button" class="btn2 btn-primary"> <i class="fa fa-minus"></i> </button>
                <button type="button" class="btn2 btn-primary"> <i class="fa fa-window-maximize"></i> </button>
                <button type="button" class="btn2 btn-primary"> <i class="fa fa-close"></i> </button>
            </div>
        </div>
        <div class="panel-body">
            <div class="row">
                <div class="col-md-5">
                    <section class="panel panel-default no-background-bg">
                        <div class="panel-body SimpleData" id="SimpleData">
                            <form class="form-horizontal ng-pristine ng-valid" role="form">
                                <div class="form-group form-group-margin">
                                    <label for="inputEmail3" class="col-sm-3 no-gutters control-label">DO Name</label>
                                    <div class="col-sm-6 no-gutters">
                                        <input class="form-control text-fld-height" required id="" placeholder="Distributor Name.." name="Name" type="text">
                                    </div>
                                </div>
                                <!--End Form Group-->
                                <div class="form-group form-group-margin">
                                    <label for="inputPassword3" class="col-sm-3 no-gutters control-label">CNIC</label>
                                    <div class="col-sm-6 no-gutters">
                                        <input class="form-control text-fld-height" id="" placeholder="CNIC (Optional).." name="CNIC" type="text">
                                    </div>
                                </div>
                                <!--End Form Group-->
                                <div class="form-group form-group-margin">
                                    <label for="inputEmail3" class="col-sm-3 no-gutters control-label">Phone</label>
                                    <div class="col-sm-6 no-gutters">
                                        <input class="form-control text-fld-height" id="" placeholder="Phone.." name="Phone" type="text">
                                    </div>
                                </div>
                                <!--End Form Group-->
                                <!--End Form Group-->
                                <div class="form-group form-group-margin">
                                    <label for="inputEmail3" class="col-sm-3 no-gutters control-label">ChequeNo</label>
                                    <div class="col-sm-6 no-gutters">
                                        <input class="form-control text-fld-height" id="" placeholder="ChequeNo.." name="ChecqueNo" type="text">
                                    </div>
                                </div>
                                <div class="form-group form-group-margin">
                                    <label for="inputEmail3" class="col-sm-3 no-gutters control-label">Address</label>
                                    <div class="col-sm-9 no-gutters">
                                        <input class="form-control text-fld-height" id="" placeholder="Address.." name="Address" type="text">
                                    </div>
                                </div>
                            
                                <!--End Form Group-->
                            </form>
                        </div>
                    </section>
                </div>

            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="">
                        <table class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th style=" text-align:center;"><i class="fa fa-plus" aria-hidden="true"></i></th>
                                    <th>Name</th>
                                    <th>CNIC</th>
                                    <th>Phone</th>
                                    <th>Cheque No</th>
                                    <th>Address </th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model != null)
                                {
                                foreach (var list in Model)
                                {
                                    <tr>
                                        <td style="background:#d5d6d9; text-align:center;"></td>
                                        <td><input class="form-control tdtext-fld-height" value="@list.Name" type="text"><input type="hidden" class="id" value="@list.Id" /></td>
                                        <td><input class="form-control tdtext-fld-height" value="@list.CNIC" type="text"></td>
                                        <td><input class="form-control tdtext-fld-height" readonly value="@list.Phone" type="text"></td>
                                        <td><input class="form-control tdtext-fld-height" value="@list.ChecqueNo" type="text"></td>
                                        <td><input class="form-control tdtext-fld-height" value="@list.Address" type="text"></td>
                                        @if (Session["Admin"] != null)
                                        {
                                            <td style="text-align:center;"><a href="#" class="Delete"><i class="fa fa-times" aria-hidden="true"></i></a></td>
                                        }

                                    </tr>
                                } 
                                }
                            

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

        </div>
    </div>
</section>
<!-- Main content -->
<section class="content">
    <!-- Your Page Content Here -->
</section>
<!-- /.content -->
<script>
    //saving the data
    $(document).ready(function () {
        debugger;
        $('.AddNew').show();
        $('.Search').remove();
        
    });
    $('.AddNew').on('click', function () {

        
        $('.Save').show();
        $('.AddNew').hide();
    });
        $('.Save').on('click', function () {
            var _Id = "#SimpleData";
            var validationFrm = "SimpleData";
            var Url = '@Url.Action("AddDO_Info", "User")';
            SaveDataSingleObj(_Id, validationFrm, Url);
            $('.Save').hide();
            $('.AddNew').show();
        });

    $('.Delete').on('click', function () {
        debugger;
        var id = $('.id').val().trim();
        var Url = '@Url.Action("DeleteDO", "User")';
        DeleteRecord(id, Url);
    });
    SetActive("distributors", "domanage", "domanage");
</script>
